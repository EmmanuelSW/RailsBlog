<div class="container">
	<div class="row">
		<div class="col s12">
			<div class="card teal lighten-5">
				<h4 class="card-content center-align">¡Iniciar Sesión!</h4>
			</div>  
		</div>    
	</div>

	<div class="col s12">
		<div class="card grey lighten-4">
			<div class="card-content">
				<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					<div class="input-field no-top">
						<%= f.label :email %>
						<%= f.email_field :email%>
					</div>

					<div class="input-field">
						<%= f.label :password, "Contraseña" %>
						<%= f.password_field :password %>
					</div>

					<% if devise_mapping.rememberable? -%>
					<div class="in">
						<%= f.check_box :remember_me %>
						<%= f.label :remember_me, "Recuerdame" %>
					</div>
					<% end -%>
					<br>
					<div class="actions">
						<%= f.submit "Iniciar Sesión", class:"btn btn-waves f-black" %>
					</div>
				<% end %>
			</div>
		</div>
		<div class="card-action">
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>



