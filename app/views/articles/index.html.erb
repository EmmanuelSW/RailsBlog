<div class="container">
	<div class="row">
		<div class="col s12">
			<div class="card teal lighten-5">
				<h4 class="card-content center-align">Listado de articulos</h4>
			</div>		
		</div>
		<% @articles.each do |article| %>
			<div class="col s12 m6">
				<div class="card grey lighten-4">
					<div class="card-image">
						<%= image_tag article.cover.url() %>
						<span class="card-title"><%= link_to(article.title, article, class:"f-black") %></span>
					</div>
					<div class="card-content">
						<p><%= article.body %></p>
					</div>
					<div class="card-action">
						<%= link_to("Ver mas", article, class:"btn waves-effect waves-light teal lighten-2 f-black") %>
						<a class="btn waves-effect waves-light light-blue f-black" href="#">Visitas: <%= article.visits_count %></a>
						<a class="btn waves-effect waves-light f-black no-right" href="#">Comentarios: <%= article.comments.count %></a>
					</div>
				</div>
			</div>
		<% end %>
			<div class="fixed-btn">
				<a class="btn-floating btn-large red" href="/articles/new">
					<i class="material-icons">add</i>
				</a>
			</div>
	</div>
</div>


