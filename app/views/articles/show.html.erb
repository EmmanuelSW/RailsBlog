<div class="container">
	<div class="row">

		<div class="col s12">
			<div class="card teal lighten-5">
				<h4 class="card-content center-align">Articulo # <%= @article.id %></h4>
			</div>		
		</div>

		<div class="col s12">
			<div class="card grey lighten-4">
				<div class="card-content">
					<span class="card-title no-top"><%= @article.title %></span>
					<p><%= @article.body %></p>
					<% unless @article.user.nil? %>
						Autor: <%= @article.user.email %>
					<% end %>
					Visitas: <%= @article.visits_count %>
				</div>
				<div class="card-action">
					<%= link_to("Editar",edit_article_path(@article), class:"btn waves-effect teal f-black") %>
					<%= link_to("Eliminar", @article, method: :delete, class:"btn waves-effect red f-black") %>
				</div>
			</div>

			<div class="card grey lighten-4">
				<span class="card-title">&nbsp;Comentarios</span>
				<div class="card-content">
					<%= render "comments/form" %>
				</div>
			</div>

			<div id="comments-box">
				<% @article.comments.each do |comment| %>
					<div class="card grey lighten-4" id="comments-box">
						<div class="card-content">
							<%= comment.body %><br>
							<hr>
							<%= comment.user.email %>
						</div>
					</div>	
				<% end %>
			</div>
			
		</div>
	</div>
</div>
