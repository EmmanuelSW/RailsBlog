<%= form_for(@article) do |f| %>

	<div class="input-field">
		<%= f.text_field :title, length:"60" %>
		<%= f.label :title, "TÃ­tulo" %>
	</div>
	
	<div class="input-field">
		<%= f.text_area :body, class:"materialize-textarea", length:"255"%>
		<%= f.label :body, "Contenido" %>
	</div>

	<div class="file-field input-field">
        <div class="btn">
        	<span>Portada</span>
        	<%= f.file_field :cover %>
      	</div>
      	<div class="file-path-wrapper">
        	<input class="file-path validate" type="text">
      	</div>
    </div>

    <% @categories.each do |category| %>
    	<p>
			<input type="checkbox" name="categories[]" id="<%= category.id %>" value="<%= category.id %>">
			<label for="<%= category.id %>"><%= category.name %></label>
		</p>
	<% end %>

	<div class="input-field">
		<button class="btn waves-effect waves-light f-black" type="submit">GUARDAR
			<i class="material-icons right">send</i>
		</button>
	</div>
<% end %>